{
  "testCases": [
    {
      "name": "create workflow instance successfully",
      "createInstance": {
        "entity": "WorkflowInstance",
        "data": {
          "id": "wf-001",
          "name": "Order Processing",
          "version": "1.0.0",
          "createdBy": "user-123"
        }
      },
      "expectedInstance": {
        "id": "wf-001",
        "name": "Order Processing",
        "version": "1.0.0",
        "status": "active",
        "createdBy": "user-123",
        "createdAt": "",
        "updatedAt": "",
        "isLocked": false,
        "concurrencyVersion": 1
      }
    },
    {
      "name": "start workflow with invalid version format",
      "setup": {
        "createInstance": {
          "entity": "WorkflowInstance",
          "data": {
            "id": "wf-002",
            "name": "Invalid Version Test",
            "version": "invalid",
            "createdBy": "user-123"
          }
        }
      },
      "command": {
        "name": "pause",
        "entityName": "WorkflowInstance",
        "instanceId": "wf-002",
        "input": {}
      },
      "expectedResult": {
        "success": true,
        "emittedEvents": [
          {
            "name": "WorkflowPaused",
            "channel": "workflow.paused",
            "timestamp": 1000000000000
          }
        ]
      },
      "expectedInstanceState": {
        "id": "wf-002",
        "name": "Invalid Version Test",
        "version": "invalid",
        "status": "paused",
        "createdBy": "user-123",
        "createdAt": "",
        "updatedAt": 1000000000000,
        "isLocked": false,
        "concurrencyVersion": 1
      }
    },
    {
      "name": "pause workflow with override (admin role)",
      "setup": {
        "createInstance": {
          "entity": "WorkflowInstance",
          "data": {
            "id": "wf-003",
            "name": "Pausable Workflow",
            "version": "1.0.0",
            "createdBy": "user-123"
          }
        }
      },
      "context": {
        "user": {
          "id": "admin-1",
          "role": "admin"
        }
      },
      "command": {
        "name": "pause",
        "entityName": "WorkflowInstance",
        "instanceId": "wf-003",
        "input": {}
      },
      "expectedResult": {
        "success": true,
        "emittedEvents": [
          {
            "name": "WorkflowPaused",
            "channel": "workflow.paused",
            "timestamp": 1000000000000
          }
        ]
      },
      "expectedInstanceState": {
        "id": "wf-003",
        "name": "Pausable Workflow",
        "version": "1.0.0",
        "status": "paused",
        "createdBy": "user-123",
        "createdAt": "",
        "updatedAt": 1000000000000,
        "isLocked": false,
        "concurrencyVersion": 1
      }
    },
    {
      "name": "lock workflow and increment concurrency version",
      "setup": {
        "createInstance": {
          "entity": "WorkflowInstance",
          "data": {
            "id": "wf-004",
            "name": "Lockable Workflow",
            "version": "1.0.0",
            "createdBy": "user-123"
          }
        }
      },
      "context": {
        "user": {
          "id": "admin-1",
          "role": "admin"
        }
      },
      "command": {
        "name": "lock",
        "entityName": "WorkflowInstance",
        "instanceId": "wf-004",
        "input": {}
      },
      "expectedResult": {
        "success": true,
        "emittedEvents": [
          {
            "name": "WorkflowLocked",
            "channel": "workflow.locked",
            "timestamp": 1000000000000
          }
        ]
      },
      "expectedInstanceState": {
        "id": "wf-004",
        "name": "Lockable Workflow",
        "version": "1.0.0",
        "status": "active",
        "createdBy": "user-123",
        "createdAt": "",
        "updatedAt": 1000000000000,
        "isLocked": true,
        "concurrencyVersion": 2
      }
    },
    {
      "name": "fail to pause locked workflow without override",
      "setup": {
        "createInstance": {
          "entity": "WorkflowInstance",
          "data": {
            "id": "wf-005",
            "name": "Locked Workflow",
            "version": "1.0.0",
