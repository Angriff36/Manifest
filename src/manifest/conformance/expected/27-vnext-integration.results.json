          }
        }
      },
      "context": {
        "user": {
          "id": "manager-1",
          "role": "manager"
        }
      },
      "command": {
        "name": "pause",
        "entityName": "WorkflowInstance",
        "instanceId": "wf-005",
        "input": {}
      },
      "expectedResult": {
        "success": false,
        "error": "Workflow instance is locked",
        "emittedEvents": []
      },
      "expectedInstanceState": {
        "id": "wf-005",
        "name": "Locked Workflow",
        "version": "1.0.0",
        "status": "active",
        "createdBy": "user-123",
        "createdAt": "",
        "updatedAt": "",
        "isLocked": true,
        "concurrencyVersion": 3
      }
    },
    {
      "name": "unlock locked workflow with critical override",
      "setup": {
        "createInstance": {
          "entity": "WorkflowInstance",
          "data": {
            "id": "wf-006",
            "name": "Locked Workflow",
            "version": "1.0.0",
